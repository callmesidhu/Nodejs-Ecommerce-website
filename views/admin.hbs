<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Products | RedStore</title>
    <link rel="stylesheet" href="stylesheets/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body bgcolor="#e1e5e6">
    <div class="container">
        <div class="navbar">
            <div class="logo">
                <a href="/"><img src="images/logo.png" alt="logo" width="125px"></a>
            </div>
            <nav>
                <h1>Admin Panel</h1>
                <ul id="MenuItems">
                    <li><a href="/account">Account</a></li>
                </ul>
            </nav>
        </div>
    </div>
    
    <!-- Cart items details -->
    <div class="small-container cart-page">
        <ul id="MenuItems" style="display: flex; margin: 12px;"></ul>

        <!-- Current Products Section -->
        <table>
            <tr>
                <th>Current Products</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>

            {{#each products}}
            <tr>
                <td>
                    <div class="cart-info">
                        <img style="width: 50px; height: 50px;" src="/storage/{{this._id}}.jpg" alt="">
                        <div>
                            <h3>{{this.title}}</h3>
                            <small>{{this.description}}</small>
                            <br>
                            <a>{{this.price}}</a>
                        </div>
                    </div>
                </td>
                <td>
                   <!--      <a href="/admin/edit">
                        <button type="submit" style="padding: 10px;">Edit</button>
                    </a>  -->

                    <form action="/admin/delete/{{this._id}}" method="POST" style="display: inline;">
                        <button onclick="return confirm('Are you sure you want to delete {{this.title}}?')" type="submit" style="padding: 10px;">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </table>

        <!-- Add New Product Section -->
        <table>
            <tr>
                <th>Add Product</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </table>

        <!-- Add New Product Form -->
        <div class="add-product-form">
            <form action="/admin/add" method="POST" enctype="multipart/form-data" style="display: flex; flex-direction: column; gap: 10px;">
                <div>
                    <label for="title">Product Title:</label>
                    <input type="text" id="title" name="title" required>
                </div>
                <div>
                    <label for="image">Product Image:</label>
                    <input type="file" id="image" name="image" required>
                </div>
                <div>
                    <label for="description">Product Description:</label>
                    <textarea id="description" name="description" required></textarea>
                </div>
                <div>
                    <label for="price">Product Price:</label>
                    <input type="number" id="price" name="price" required>
                </div>
                <div>
                    <button type="submit" style="padding: 10px;">Add Product</button>
                </div>
            </form>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        var MenuItems = document.getElementById("MenuItems");
        MenuItems.style.maxHeight = "0px";
        function menutoggle() {
            if (MenuItems.style.maxHeight == "0px") {
                MenuItems.style.maxHeight = "200px";
            } else {
                MenuItems.style.maxHeight = "0px";
            }
        }
    </script>
</body>

</html>
